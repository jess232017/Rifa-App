<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/row_padding"
    android:paddingTop="@dimen/row_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingminimo"
        card_view:cardCornerRadius="@dimen/paddingminimo"
        android:id="@+id/cvNumber"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingminimo"
            android:layout_marginBottom="@dimen/row_padding"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/txtNum"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="30sp"
                android:background="@drawable/rounded_textview"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:lines="1" />
            <TextView
                android:id="@+id/txtpago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pago"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:lines="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>